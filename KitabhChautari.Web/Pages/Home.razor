@page "/"
@using System.Security.Claims
@inject KitabhChautariAuthStateProvider KitabhChautariAuthStateProvider

<PageTitle>Home</PageTitle>

<h1>
    Hello, @KitabhChautariAuthStateProvider.User?.Name
</h1>

Welcome to your new app.

<AuthorizeView>
        <Authorizing> 
            <p> Authorizing...</p>
            </Authorizing>
        <NotAuthorized>
            <p> Not Authorized</p>
        </NotAuthorized>
        <Authorized>
        <p>Authorized: @context.User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Name)?.Value </p>

        </Authorized>
</AuthorizeView>
